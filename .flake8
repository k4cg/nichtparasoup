[flake8]

show-source  = True

ignore =
    # ignore `self`, `cls` markers of flake8-annotations>=2.0
    ANN101,ANN102

exclude = .git,__pycache__,_OLD,_TEST,build,dist,.tox,*_cache,.eggs
    setup.py
    docs
    examples

max-complexity = 5

# allow up to 119 characters as this is the width of GitHub code review
max-line-length = 120

